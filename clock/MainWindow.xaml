<Window x:Class="clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clock"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="box" Width="60" Height="20" HorizontalAlignment="Left"/>
        <Image Source="board.jpg" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image Name="minuite" Source="minuite.png" Width="40" RenderTransformOrigin="0.512,0.953" Margin="380,16,380,207">
            <Image.RenderTransform>
                <RotateTransform Angle="0" />
            </Image.RenderTransform>
        </Image>
        <Image Name="hour" Source="hour.png" Width="30" HorizontalAlignment="Center" Margin="0,68,0,203" RenderTransformOrigin="0.478,0.915">
            <Image.RenderTransform>
                <RotateTransform Angle="0" />
            </Image.RenderTransform>
        </Image>
        <Image Name="second" Source="second.png" Width="8" HorizontalAlignment="Center" Margin="0,118,0,200" RenderTransformOrigin="0.488,0.853">
            <Image.RenderTransform>
                <RotateTransform Angle="0" />
            </Image.RenderTransform>
        </Image>

    </Grid>
</Window>
